{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "My React App as a Chrome Extension",
  "action": {
    "default_title": "My App",
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ]
}
